@model ShopManagement.Application.Contracts.Product.CreateProduct
@{
}
<div class = "modal-header">
    <button aria-hidden = "true" class = "close" data-dismiss = "modal" type = "button">×</button>
    <h4 class = "modal-title">ایجاد محصول جدید</h4>
</div>

<form asp-page = "./Index" asp-page-handler = "Create"
      data-action = "Refresh"
      data-ajax = "true"
      data-callback = ""
      method = "post">
    <div class = "modal-body">
        <div class = "row">
            <div class = "col-md-6">
                <div class = "form-group">
                    <label asp-for = "Name" class = "control-label">نام</label>
                    <input asp-for = "Name" class = "form-control" onchange = "makeSlug('Name', 'Slug')" type = "text">
                    <span asp-validation-for = "Name" class = "error"></span>
                </div>
            </div>
            <div class = "col-md-6">
                <div class = "form-group">
                    <label asp-for = "Code" class = "control-label">کد</label>
                    <input asp-for = "Code" class = "form-control" type = "text">
                    <span asp-validation-for = "Code" class = "error"></span>
                </div>
            </div>
            <div class = "col-md-6">
                <div class = "form-group">
                    <label asp-for = "Slug" class = "control-label">اسلاگ</label>
                    <input asp-for = "Slug" class = "form-control" type = "text">
                    <span asp-validation-for = "Slug" class = "error"></span>
                </div>
            </div>
        </div>
        <div class = "row">
            <div class = "col-md-6">
                <div class = "form-group">
                    <label asp-for = "Picture" class = "control-label">قیمت واحد </label>
                    <input asp-for = "UnitPrice" class = "form-control" type = "text"/>
                    <span asp-validation-for = "Picture" class = "error"></span>
                </div>
            </div>
            <div class = "col-md-6">
                <div class = "form-group">
                    <label  class = "control-label" asp-for="CategoryId">گروه محصول</label>
                    <select  class = "form-control" type = "text" asp-for="CategoryId"
                            asp-items='new SelectList(Model.Categories , "Id" , "Name")'>
                        <option value="0" >گروه محصول</option>
                    </select>
                    <span asp-validation-for = "CategoryId" class = "error"></span>
                </div>
            </div>
        </div>
        <div class = "row">
            <div class = "col-md-12">
                <div class = "form-group">
                    <label asp-for = "Picture" class = "control-label">عکس</label>
                    <input asp-for = "Picture" class = "form-control" type = "text"/>
                    <span asp-validation-for = "Picture" class = "error"></span>
                </div>
            </div>
        </div>
        <div class = "row">
            <div class = "col-md-6">
                <div class = "form-group">
                    <label asp-for = "PictureAlt" class = "control-label">Alt</label>
                    <input asp-for = "PictureAlt" class = "form-control" type = "text">
                    <span asp-validation-for = "PictureAlt" class = "error"></span>
                </div>
            </div>
            <div class = "col-md-6">
                <div class = "form-group">
                    <label asp-for = "PictureTitle" class = "control-label">عنوان</label>
                    <input asp-for = "PictureTitle" class = "form-control" type = "text">
                    <span asp-validation-for = "PictureTitle" class = "error"></span>
                </div>
            </div>
        </div>
        <div class = "row">
            <div class = "col-md-12">
                <div class = "form-group no-margin">
                    <label asp-for = "Description" class = "control-label">توضیحات</label>
                    <textarea asp-for="Description" class="form-control autogrow" 
                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for = "Description" class = "error"></span>
                </div>
            </div>
        </div>
        <div class = "row">
            <div class = "col-md-12">
                <div class = "form-group no-margin">
                    <label asp-for = "ShortDescription" class = "control-label">توضیحات کوتاه</label>
                    <textarea asp-for="ShortDescription" class="form-control autogrow" onchange="fillField('ShortDescription', 'MetaDescription')"
                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for = "ShortDescription" class = "error"></span>
                </div>
            </div>
        </div>
        <div class = "row">
            <div class = "col-md-12">
                <div class = "form-group">
                    <label asp-for = "Keywords" class = "control-label">کلمات کلیدی</label>
                    <input asp-for = "Keywords" class = "form-control" type = "text">
                    <span asp-validation-for = "Keywords" class = "error"></span>
                </div>
            </div>
        </div>
        <div class = "row">
            <div class = "col-md-12">
                <div class = "form-group no-margin">
                    <label asp-for = "MetaDescription" class = "control-label">توضیحات متا</label>
                    <textarea asp-for="MetaDescription" class="form-control autogrow"
                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for = "MetaDescription" class = "error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class = "modal-footer">
        <button class = "btn btn-default waves-effect" data-dismiss = "modal" type = "button">بستن</button>
        <button class = "btn btn-info waves-effect waves-light" type = "submit">ایجاد</button>
    </div>
</form>