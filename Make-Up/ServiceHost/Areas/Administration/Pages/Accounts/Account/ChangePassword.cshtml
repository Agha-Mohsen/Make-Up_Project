@model AccountManagement.Application.Contracts.Account.ChangePassword
@{
}
<div class="modal-header">
    <button aria-hidden="true" class="close" data-dismiss="modal" type="button">×</button>
    <h4 class="modal-title">تغییر کلمه رمز</h4>
</div>

<form asp-page="./Index" asp-page-handler="ChangePassword"
      data-action="Refresh"
      data-ajax="true"
      data-callback=""
      method="post">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Password" class="control-label">کلمه رمز</label>
                    <input type="password" asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RePassword" class="control-label">تکرار کلمه رمز</label>
                    <input type="password" asp-for="RePassword" class="form-control">
                    <span asp-validation-for="RePassword" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id">
    </div>
    <div class="modal-footer">
        <button class="btn btn-default waves-effect" data-dismiss="modal" type="button">بستن</button>
        <button class="btn btn-info waves-effect waves-light" type="submit">اعمال تغییر</button>
    </div>
</form>