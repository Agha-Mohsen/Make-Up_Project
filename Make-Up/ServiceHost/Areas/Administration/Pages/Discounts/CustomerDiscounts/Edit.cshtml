@model DiscountManagement.Application.Contract.CustomerDiscount.EditCustomerDiscount
}
<div class = "modal-header">
    <button aria-hidden = "true" class = "close" data-dismiss = "modal" type = "button">×</button>
    <h4 class = "modal-title">ویرایش تخفیف مشتری </h4>
</div>

<form asp-page = "./Index" asp-page-handler = "Edit"
      data-action = "Refresh"
      data-ajax = "true"
      data-callback = ""
      method = "post">
    <div class = "modal-body">
        <div class = "row">
            <div class = "col-md-6">
                <div class = "form-group">
                    <label asp-for = "ProductId" class = "control-label">انتخاب محصول</label>
                    <select asp-for = "ProductId" asp-items = 'new SelectList(Model.Products, "Id", "Name")' class = "form-control"
                            type = "text">
                        <option value = "0">انتخاب محصول</option>
                    </select>
                    <span asp-validation-for = "ProductId" class = "error"></span>
                </div>
            </div>
            <div class = "col-md-6">
                <div class = "form-group">
                    <label asp-for = "DiscountRate" class = "control-label">درصد تخفیف </label>
                    <input asp-for = "DiscountRate" class = "form-control" type = "text">
                    <span asp-validation-for = "DiscountRate" class = "error"></span>
                </div>
            </div>
        </div>
        <div class = "row">
            <div class = "col-md-6">
                <div class = "form-group">
                    <label asp-for = "StartDate" class = "control-label">تاریخ شروع</label>
                    <input asp-for = "StartDate" class = "form-control persianDateInput" type = "text">
                    <span asp-validation-for = "StartDate" class = "error"></span>
                </div>
            </div>
            <div class = "col-md-6">
                <div class = "form-group">
                    <label asp-for = "EndDate" class = "control-label">تاریخ پایان</label>
                    <input asp-for = "EndDate" class = "form-control persianDateInput" type = "text"/>
                    <span asp-validation-for = "EndDate" class = "error"></span>
                </div>
            </div>
        </div>
        <div class = "row">
            <div class = "col-md-12">
                <div class = "form-group no-margin">
                    <label asp-for = "Reason" class = "control-label">علت تخفیف</label>
                    <textarea asp-for="Reason" class="form-control autogrow"
                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for = "Reason" class = "error"></span>
                </div>
            </div>
        </div>
        <input asp-for = "Id" type = "hidden" value = "@Model.Id"/>
    </div>
    <div class = "modal-footer">
        <button class = "btn btn-default waves-effect" data-dismiss = "modal" type = "button">بستن</button>
        <button class = "btn btn-info waves-effect waves-light" type = "submit">ویرایش</button>
    </div>
</form>